# Staging Environment Configuration

# Environment
ARA_ENV=staging
ARA_LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database
POSTGRES_HOST=ara-postgres-staging
POSTGRES_PORT=5432
POSTGRES_DB=ara_ai_staging
POSTGRES_USER=ara_staging
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}

# Redis
REDIS_HOST=ara-redis-staging
REDIS_PORT=6379
REDIS_DB=0

# Security
JWT_SECRET_KEY=${JWT_SECRET_KEY}
ARA_MASTER_KEY=${ARA_MASTER_KEY}

# Features
ENABLE_CORS=true
ENABLE_DOCS=true
ENABLE_METRICS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100

# External APIs
ALPHA_VANTAGE_API_KEY=${ALPHA_VANTAGE_API_KEY}
POLYGON_API_KEY=${POLYGON_API_KEY}
TWITTER_API_KEY=${TWITTER_API_KEY}
REDDIT_CLIENT_ID=${REDDIT_CLIENT_ID}
REDDIT_CLIENT_SECRET=${REDDIT_CLIENT_SECRET}
